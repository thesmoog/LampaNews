<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LampaNews" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_900</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Default text style -->
        <item name="android:textColorLink">@color/light_blue</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="Theme.LampaNews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LampaNews.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.LampaNews.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.LampaNews.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">?attr/colorPrimaryVariant</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="tabTextColor">@color/gray_400</item>
        <item name="tabSelectedTextColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="NewsTitleTextStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>